---
interface Props {
	meta: string;
}

const { meta } = Astro.props as Props;
import "../styles/base.css";
---
<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<Fragment set:html={meta} />
	</head>
	<body class="bg-back dark:bg-back-dark text-text dark:text-text-dark">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
