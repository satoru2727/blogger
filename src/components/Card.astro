---
import { Icon } from "astro-icon/components";
const { title, date, slug, tags, base } = Astro.props;
const tagList = tags.slice(0, 3);
const DatetoString = (stdate) => {
	const date = new Date(stdate);
	return `${date.getFullYear()}年${date.getMonth() + 1}月${date.getDate()}日`;
};
const DateString = DatetoString(date);
---
<div class="card">
	<a href={base +"/" + slug} class="text-4xl border-b-primary">{title}</a>
  <div class="flex flex-row text-white-rock-300 text-xl">
    <Icon name="ic:baseline-calendar-month" class=" w-max p-0 mb-0 color-secondary" />
    <span>{DateString}</span>
	{tagList.length > 0 && (
		<div class="flex flex-row">
			{tagList.map((tag) => (
				<div class="flex flex-row">
					<Icon name="ic:baseline-label" class="w-max p-0 mb-0 color-secondary" />
					<a href={`${base}/${tag}`}>{tag}</span>
				</div>
			))}
		</div>
		)}
  </div>
	</div>
